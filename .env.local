# Local Development Environment
NODE_ENV=development

# Database Configuration (Docker PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/iawarriordb
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=iawarriordb
PGSSLMODE=disable

# Application Ports
APP_PORT=9000
CLIENT_PORT=3000

# Admin Credentials
ADMIN_EMAIL=admin@local.dev
ADMIN_PASSWORD=admin123
ADMIN_USERNAME=admin

# Company/Instance
COMPANY_NAME=Iawarrior tech
INSTANCE_NAME=local

# Base URL
BASE_URL=http://localhost:3000

# Session Secret
SESSION_SECRET=local-dev-secret-change-in-production

# File Upload
MAX_FILE_SIZE=10485760

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_FRONTEND_WEBSITE=true
